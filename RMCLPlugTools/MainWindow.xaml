<mah:MetroWindow x:Class="RMCLPlugTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RMCLPlugTools"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        Title="RMCL3 插件工具" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <ScrollViewer Margin="5,5,5,52">
            <StackPanel>
                <Expander Header="插件信息" Margin="5" IsExpanded="True">
                    <StackPanel Margin="5">
                        <DockPanel Margin="5">
                            <Label>插件名称：</Label>
                            <TextBox>Plug Name</TextBox>
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label>作者名称：</Label>
                            <TextBox>Null</TextBox>
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label>插件版本：</Label>
                            <TextBox>1.0.0</TextBox>
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label>插件图标：</Label>
                            <TextBox></TextBox>
                        </DockPanel>
                    </StackPanel>
                </Expander>
                <Expander Header="插件包含" Margin="5" IsExpanded="True">
                    <StackPanel Margin="5">
                        <DockPanel Margin="5">
                            <Label>插件本体：</Label>
                            <TextBox></TextBox>
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label>主文件夹：</Label>
                            <TextBox></TextBox>
                        </DockPanel>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="5">
            <Label FontSize="11" Foreground="Gray" Margin="0,-5" VerticalAlignment="Bottom">仅适用于 RMCL3 Release 2025.4.4 后的版本！</Label>
            <Label FontSize="11" Foreground="Gray">本工具使用了开源 UI 库 Mahapps.Metro</Label>
        </StackPanel>
        <DockPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5">
            <Button Style="{StaticResource MahApps.Styles.Button.Square}" Height="32" Width="120" Margin="5">保存插件配置</Button>
            <Button Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Height="32" Width="80" Margin="5">打包</Button>
        </DockPanel>
    </Grid>
</mah:MetroWindow>
