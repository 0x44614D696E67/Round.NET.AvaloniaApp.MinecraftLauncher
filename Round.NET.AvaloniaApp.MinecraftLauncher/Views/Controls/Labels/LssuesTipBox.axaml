<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Round.NET.AvaloniaApp.MinecraftLauncher.Views.Controls.Tips">
    <Design.PreviewWith>
        <controls:LssuesTipBox LssuesType="Bug" LssuesText="Bug"/>
    </Design.PreviewWith>

    <Style Selector="controls|LssuesTipBox">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border Height="20" MinWidth="20" Background="{TemplateBinding LssuesColor}" BorderBrush="{TemplateBinding LssuesFontColor}" BorderThickness="1" CornerRadius="14">
                    <Label Foreground="{TemplateBinding LssuesFontColor}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="9" Margin="5,-2,5,0" Content="{TemplateBinding LssuesText}"></Label>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
