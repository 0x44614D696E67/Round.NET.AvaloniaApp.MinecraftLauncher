<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Round.NET.AvaloniaApp.MinecraftLauncher.Views.Controls.Tips">
    <Design.PreviewWith>
        <controls:IssuesTipBox IssuesType="Bug" IssuesText="Bug"/>
    </Design.PreviewWith>

    <Style Selector="controls|IssuesTipBox">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border Height="20" MinWidth="20" Background="{TemplateBinding IssuesColor}" BorderBrush="{TemplateBinding IssuesFontColor}" BorderThickness="1" CornerRadius="14">
                    <Label Foreground="{TemplateBinding IssuesFontColor}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="9" Margin="5,-2,5,0" Content="{TemplateBinding IssuesText}"></Label>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
